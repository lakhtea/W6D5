<h1>Create a new request</h1>

<form action="cat_rental_requests_url" method = "POST">
    <label for="cats">Choose a cat to rent:</label>
    <select name="cats" id="cats">
        <option value="Select a cat" selected disabled>Select a cat</option>
        <% Cat.all.each do |cat| %>
        <option value="<%= cat.name %>"> <%= cat.name %> </option>
        <% end %>
    </select>

    <br>

    <label for="start_date" >Start Date:</label>
    <input id="start_date" type="date" name="cat_rental_request[start_date]">

    <label for="end_date" >End Date:</label>    
    <input id="end_date" type="date" name="cat_rental_request[end_date]" >

    <br>

    <input type="submit" value="Create Request">

</form>

